	<insert id="addTag" parameterType="hashmap">
    <![CDATA[
        UPDATE DB SET 
            TAGS = #{tag}
        WHERE
            KEYWORD = #{keyword}
    ]]>
	</insert>
	
	<select id="searchForAddTag" parameterType="hashmap" resultType="hashmap">
    <![CDATA[
        SELECT
            TAGS
